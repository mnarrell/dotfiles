#!/usr/bin/env bash
set -e

if [ ! -f ~/.vim/autoload/plug.vim ]; then
    curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim
fi

yes | pip2 install neovim
yes | pip3 install neovim

vim -u ${HOME}/.dotfiles//topics/vim/plugins.vim +PlugClean! +PlugUpdate +qa!
vim -u ${HOME}/.dotfiles//topics/vim/plugins.vim +UpdateRemotePlugins +qa!
