[include]
  path = config.local

[user]
  useConfigOnly = true

[apply]
  whitespace = fix

[core]
  abbrev = 12
  ignorecase = false

[color]
  branch = auto
  diff = auto
  grep = auto
  showbranch = auto
  status = auto
  ui = auto

[alias]
  br = branch
  ci = commit
  cm = !git add -A && git commit -m
  co = checkout
  commend = commit --amend --no-edit
  fetch = fetch -p
  fs = submodule update --remote
  it = !git init && git commit -m "root" --allow-empty
  patch = --no-pager diff --no-color
  pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
  pull = pull --tags
  scrub = gc --aggressive --prune=now
  st = status -sb
  wip = commit -am "WIP"

[merge]
  ; ff = only
  tool = opendiff
  conflictstyle = merge
  stat = true

[mergetool]
  prompt = true

[diff]
  tool = opendiff

[diff "bin"]
  textconv = hexdump -v -C

[svn]
  rmdir = true

[push]
  default = nothing

[fetch]
  prune = true
  pruneTags = true

[help]
  autocorrect = 1
