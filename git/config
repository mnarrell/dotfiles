[user]
  useConfigOnly = true

[apply]
  whitespace = fix

[core]
  abbrev = 12
  ignorecase = false

[color]
  branch = auto
  diff = auto
  grep = auto
  showbranch = auto
  status = auto
  ui = auto

[alias]
  br = branch
  cb = !git checkout $(git branch | fzf)
  ci = commit
  cm = !git add -A && git commit -m
  co = checkout
  commend = commit --amend --no-edit
  cp = cherry-pick
  fs = submodule update --remote
  it = !git init && git commit -m "root" --allow-empty
  pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
  pum = !"git fetch origin -v; git fetch upstream -v; git merge upstream/main"
  scrub = gc --aggressive --prune=now
  st = status -sb
  wip = commit -am 'feat: WIP'

[merge]
  tool = opendiff

[mergetool]
  prompt = false

[diff]
  tool = opendiff
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true

[difftool]
  prompt = false

[diff "bin"]
  textconv = hexdump -v -C

[push]
  default = nothing

[pull]
  rebase = true
  tags = true

[fetch]
  prune = true
  pruneTags = true

[help]
  autocorrect = 1

[interactive]
  diffFilter = delta --color-only

[init]
  defaultBranch = main

[credential]
  helper = osxkeychain

[url "ssh://git@github.com/"]
  insteadOf = https://github.com/

[include]
  path = ~/.private_dotfiles/git/config.local

[includeIf "gitdir:~/src/work/"]
  path = ~/.private_dotfiles/git/config.work

[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
