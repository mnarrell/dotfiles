[include]
  path = config.local

[user]
  useConfigOnly = true

[apply]
  whitespace = fix

[core]
  abbrev = 12
  ignorecase = false
  pager = delta

[color]
  branch = auto
  diff = auto
  grep = auto
  showbranch = auto
  status = auto
  ui = auto

[alias]
  br = branch
  cherry = cherry-pick
  ci = commit
  cm = !git add -A && git commit -m
  co = checkout
  commend = commit --amend --no-edit
  cp = cherry-pick
  fs = submodule update --remote
  it = !git init && git commit -m "root" --allow-empty
  patch = --no-pager diff --no-color
  pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
  pum = !"git fetch origin -v; git fetch upstream -v; git merge upstream/main"
  scrub = gc --aggressive --prune=now
  st = status -sb
  wip = commit -am "WIP"

[merge]
  ; ff = only
  tool = opendiff
  conflictstyle = merge
  ; tool = vimdiff
  ; conflictstyle = diff3
  stat = true

[mergetool]
  prompt = false

[diff]
  tool = opendiff

[diff "bin"]
  textconv = hexdump -v -C

[svn]
  rmdir = true

[push]
  default = nothing

[pull]
  rebase = true
  tags = true

[fetch]
  prune = true
  pruneTags = true

[help]
  autocorrect = 1

[delta]
  ; plus-color = "#012800"
  ; minus-color = "#340001"
  syntax-theme = Monokai Extended Bright
  line-numbers = true

[interactive]
  diffFilter = delta --color-only

[init]
  defaultBranch = main
